<h1>New Quote</h1>
<%= form_for :quotes, url: quotes_path  do |f| %>
	<p>
		<%= f.label :quote %><br>
		<%= f.text_field :quote %>
	</p>
	<p>
		<%= f.label :author %><br>
		<%= f.text_area :author %>
	</p>
	<p>
		<%= f.label :date %><br>
		<%= f.text_area :date %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
