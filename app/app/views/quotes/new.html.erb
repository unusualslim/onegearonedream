<h1>New Quote</h1>
<%= form_for :quote, url: quotes_path  do |f| %>
	<p>
		<%= f.label :content %><br>
		<%= f.text_area :content %>
	</p>
	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :date %><br>
		<%= f.text_field :date %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', quotes_path %>
