<%= form_for @quote do |f| %>
	<% if @quote.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@quote.errors.count, "error") %>
			prohibited
				this article from being saved:
			</h2>
			<ul>
				<% @quote.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<p>
		<%= f.label :context %><br>
		<%= f.text_area :context %>
	</p>
	
	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>
	
	<p>
		<%= f.label :date %><br>
		<%= f.date_select :date %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
	
<% end %>
	